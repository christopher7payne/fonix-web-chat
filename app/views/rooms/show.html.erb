<h1 class='mb-3'><%= @room.name %></h1>

<h3>Messages</h3>

<%= turbo_stream_from @room %>
<div id="messages">
  <% @room.messages.order(:created_at).each do |message| %>
    <%= render message %>
  <% end %>
</div>

<%= render 'messages/new_form' %>

<%= link_to 'Back to All Rooms', all_rooms_path, class: 'pt-3 d-block' %>
