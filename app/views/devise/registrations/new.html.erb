<h2 class="mb-3">Sign up</h2>

<%= render "devise/shared/error_messages", resource: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="form-floating mb-2">
  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'name@example.com', autocomplete: 'off' %>
  <%= f.label :email, class: 'text-dark' %>
</div>

<div class="form-floating mb-2">
  <%= f.email_field :password, type: 'password', class: 'form-control', placeholder: 'name@example.com', autocomplete: 'new-password', minlength: @minimum_password_length %>
  <%= f.label :password, class: 'text-dark' %>
</div>

<div class="form-floating mb-2">
  <%= f.email_field :password_confirmation, type: 'password', class: 'form-control', placeholder: 'name@example.com', autocomplete: 'new-password' %>
  <%= f.label :password_confirmation, class: 'text-dark' %>
</div>


<div class="actions">
  <%= f.submit "Sign up", class: 'w-100 btn btn-lg btn-primary mb-3' %>
</div>
<% end %>

<%= render "devise/shared/links" %>
